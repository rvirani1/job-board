.row
  .col-md-4
    .well Put an image here
  .col-md-8
    .panel.panel-default
      .panel-heading.clearfix
        %h4.inline= @comp.name

        -if current_user.company == @comp
          = link_to "Settings", edit_company_path(@comp), class: "btn btn-default pull-right"
          = link_to "Delete Company", company_path, method: :delete, class: "btn btn_default pull-right", confirm: 'Are you sure you want to delete this company and all of its jobs?'
      .panel-body= @comp.description
  -if current_user.company == @comp
    = link_to "Create New Job", new_job_path, class: "btn btn-default pull-left"
.row
  = render partial: "shared/jobslist", locals: {jobs: @jobs, heading: "#{@comp.name} Jobs"}
.row
  = render partial: "shared/companyuserslist", locals: {users: @comp.users}