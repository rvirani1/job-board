= form_tag(jobs_path(@jobs), method: :get, id: :search_form, class: 'form-search') do
  = search_field_tag "search", params[:search], class: "form-control"
  = submit_tag 'search', class: "btn btn-default"

- if current_user
  = link_to "Post New Job", new_job_path, class: "btn btn-primary"

%table.table.table-striped
  %thead
    %tr
      %th Title
      %th Posted By
      %th Active Until
  %tbody
    - @jobs.each do |job|
      %tr
        %td= link_to job.title, job
        %td= job.author.email
        %td= job.end_date
